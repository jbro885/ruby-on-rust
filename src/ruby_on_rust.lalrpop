use std::str::FromStr;
use ast::*;

grammar;

pub Expr: Box<Expr> = {
    <l:Expr> "+" <r:Expr> => l + r,
    <l:Expr> "-" <r:Expr> => l - r,
    <l:Expr> "*" <r:Expr> => l * r,
    <l:Expr> "/" <r:Expr> => l / r,
    "(" <Expr> ")",
    Number => Box::new(Expr::Number(<>)),
};

Number: i64 = {
    r"[0-9]+" => i64::from_str(<>).unwrap()
};
